// NS4

controls { /* empty */ };

options {
	query-source address 10.53.0.4;
	notify-source 10.53.0.4;
	transfer-source 10.53.0.4;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.4; };
	listen-on-v6 { none; };
	dnssec-enable yes;
	dnssec-validation yes;
};

view us {
	match-clients { 10.53.0.1; };
	recursion yes;

	plugin query "../../../../plugins/lib/dns64.so" {
		dns64 2001:cccc::/96 {
			clients { any; };
		};
	};

	zone "." {
		type hint;
		file "../../common/root.hint";
	};
};

view them {
	recursion no;

	plugin query "../../../../plugins/lib/dns64.so" {
		dns64 2001:dddd::/96 {
			clients { any; };
		};
	};

	zone "example" {
		type master;
		file "example.db";
	};
};
